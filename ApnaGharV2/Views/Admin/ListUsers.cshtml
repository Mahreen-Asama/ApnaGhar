@{
    Layout = "_LayoutAdmin";
}

@model List<ApnaGharV2.Models.Classes.User>

    <div id="after-header-div" class="text-white text-center" style="background-color: var(--site-color); height:150px;">
    <h4 class="pt-3">Users</h4>
    <p class="">Welcome to ApnaGhar</p>
</div>


<div class="container bg-white p-4 shadow-lg border rounded" style="margin-top:-50px; width:90%;">


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">City</th>
                <th scope="col">Role</th>
                <th scope="col">Added By</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(ApnaGharV2.Models.Classes.User u in Model)
            {
                <tr>
                    <th scope="row">@u.Id</th>
                    <td class="text-wrap">
                        <img src="~/images/profiles/@(u.Role)/@(u.Id).jpg" class="img-fluid rounded-pill shadow-sm" height="30" width="30"/>
                        @u.Name
                    </td>
                    <td class="fw-bold" class="text-wrap">
                        <a href="mailto:@(u.Email)?Subject=Mail Check From ApnaGhar&body=Assalam o Alaikum! @u.Name" style="text-decoration:none;" class="text-dark">
                            @u.Email
                        </a>
                    </td>
                    <td class="fw-bold" class="text-wrap">
                        <a href="tel:+92@(u.PhoneNumber)" style="text-decoration:none;" class="text-dark">
                        +92 @u.PhoneNumber
                        </a>
                    </td>
                    <td>@u.City</td>
                    <td>@u.Role</td>
                    <td>@u.CreatedByUserId</td>

                    <td class="btn-group" role="group">
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="EditUser" asp-route-uid="@u.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveUser" asp-route-uid="@u.Id">Remove</a>
                    </td>
