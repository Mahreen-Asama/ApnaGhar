@{
    Layout="_LayoutAdmin";
}

@model ApnaGharV2.Models.ViewModels.RegisterViewModel


<div id="after-header-div" class="text-white text-center" style="background-color: var(--site-color); height:150px;">
    <h4 class="pt-3">Users</h4>
    <p class="">Welcome to ApnaGhar</p>
</div>


<div class="container bg-white p-4 shadow-lg w-50 border rounded" style="margin-top:-50px;">

<h2 class="" style="color:var(--site-color)">Register User</h2>
<div class="" style="">
<div asp-validation-summary="All" class="text-danger"></div>
</div>

    @*form here*@
   <form enctype="multipart/form-data" id="register-user-form-admin" asp-controller="admin" asp-action="AddUser" >

    <div class="mb-3 form-group">
        <input asp-for="Username"  placeholder="Username*" 
               class="form-control" id="username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <input asp-for="User.Email"  placeholder="Email*" class="form-control" 
                                                    id="email">
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    
    <div class="mb-3 form-group">
        <input asp-for="Password" type="password" placeholder="Password*" 
             class="form-control" id="exampleInputPassword1">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <input asp-for="ConfirmPassword" type="password" 
               placeholder="Confirm Password*" class="form-control" 
               id="exampleInputPassword2">
        <span asp-validation-for="ConfirmPassword"  
                             class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
                    <input asp-for="User.Name" class="form-control" placeholder="Name" maxlength="15">
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                        <img src="~/images/pak.png" style="display:inline; height:15px; width:20px;"/>
                        &ensp;+92
                    </span>
                    <input asp-for="User.PhoneNumber" class="form-control" placeholder="3xxxxxxxxx" maxlength=10>
                    </div>
                     <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input asp-for="User.City" class="form-control" placeholder="City">
                    <span asp-validation-for="User.City" class="text-danger"></span>
                </div>
                
                <div class="mb-3 form-group">

        <label asp-for="Role" class="form-label">Register as: &nbsp;&nbsp;&nbsp;</label>
        @foreach (var role in Model.Roles)
        {
            <input type="radio" asp-for="Role" value="@role" id="@(role)" class="form-check-input"/>
                <label asp-for="Role" class="form-label">@role &nbsp;</label>
        }
        <span asp-validation-for="Role" class="text-danger"></span>

    </div>
     <div class="mb-3 form-group">
        <label asp-for="ProfileImage" class="form-label" style="">Profile: &nbsp;&nbsp;&nbsp;</label>
        <input class="form-control" type="file" asp-for="ProfileImage" style="">
    </div>

    <button type="submit" class="btn btn-success" style="">Register</button>
</form>

</div>

