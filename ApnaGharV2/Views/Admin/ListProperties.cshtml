@{
    Layout = "_LayoutAdmin";
}
@model List<ApnaGharV2.Models.ViewModels.PropertyViewModel>

<div id="after-header-div" class="text-white text-center" style="background-color: var(--site-color); height:150px;">
    <h4 class="pt-3">Properties</h4>
    <p class="">Welcome to ApnaGhar</p>
</div>

<div class="container bg-white p-4 shadow-lg border rounded" style="margin-top:-50px; width:98%;">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th scope="col">City</th>
                <th scope="col">Area</th>
                <th scope="col">Purpose</th>
                @*<th scope="col">Address</th>*@
                <th scope="col">Type</th>
                <th scope="col">ImagesCount</th>

            </tr>
        </thead>
        <tbody>
            @foreach(ApnaGharV2.Models.ViewModels.PropertyViewModel p in Model)
            {
                <tr>
                    <th scope="row">@p.Id</th>
                    <td>@p.Title</td>
                    <td>@p.Size @p.SizeUnit</td>
                    <td>@p.Price @p.PriceUnit</td>
                    <td>@p.City</td>
                    <td>@p.Area</td>
                    <td>@p.Purpose</td>
                    @*<td>@p.Address</td>*@
                    <td>@p.Type</td>
                    <td>@p.ImagesCount</td>

                    <td class="btn-group" role="group">
                        <a class="btn btn-info" asp-controller="Admin" asp-action="PropertyDetails" asp-route-id="@p.Id">Details</a>
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="EditProperty" asp-route-id="@p.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveProperty" asp-route-id="@p.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

