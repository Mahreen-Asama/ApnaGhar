@model ApnaGharV2.Models.ViewModels.RegisterViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6 p-5" style="">
          @*<h4 style="color: #3b5998;" class="fw-bold">Sign Up</h4>*@
          <h4 class="text-center" style="margin-top:110px;">Create Account:</h4>
          <div asp-validation-summary="All" class="text-danger"></div>
            <form class="mt-5 mb-5 w-75 mx-auto" asp-controller="account" asp-action="register">
              
                <div class="mb-3 form-group">
                    <input type="text" class="form-control p-2 bg-light shadow-sm" id="exampleFormControlInput1" placeholder="Username*">
                    <span asp-validation-for="Username" class="text-danger text-start"></span>  
                </div>
                  <div class="mb-3 form-group">
                    <input type="email" class="form-control p-2 bg-light shadow-sm" id="" placeholder="Email*">
                    <span asp-validation-for="User.Email" class="text-danger text-start"></span>
                  </div>
                  <div class="mb-3 form-group">
                    <input type="password" class="form-control p-2 bg-light shadow-sm" id="" placeholder="Passsword*">
                    <span asp-validation-for="Password" class="text-danger text-start"></span>
                  </div>
                  <div class="mb-3 form-group">
                    <input type="password" class="form-control p-2 bg-light shadow-sm" id="" placeholder="Confirm Passsword*">
                    <span asp-validation-for="ConfirmPassword" class="text-danger text-start"></span>
                  </div>
                  <div class="mb-3 form-group">
                    <input type="text" class="form-control p-2 bg-light shadow-sm" id="" placeholder="Name*">
                    <span asp-validation-for="User.Name" class="text-danger text-start"></span>
                  </div>
                  <div class="mb-3 form-group">
                    <input type="text" class="form-control p-2 bg-light shadow-sm" id="" placeholder="Phone Number*">
                    <span asp-validation-for="User.PhoneNumber" class="text-danger text-start"></span>
                  </div>
                  <div class="mb-3 form-group">
                    <input type="text" class="form-control p-2 bg-light shadow-sm" id="" placeholder="City*">
                    <span asp-validation-for="User.City" class="text-danger text-start"></span>
                  </div>

                  <div class="mb-3 form-group" style="display:none;">
            <input type="radio" asp-for="Role" value="User" id="User" class="form-check-input" checked/>
            </div>
        @*<label asp-for="Role" class="form-label">Register as: &nbsp;&nbsp;&nbsp;</label>
        @foreach (var role in Model.Roles)
        {
                <label asp-for="Role" class="form-label">@role &nbsp;</label>
        }
        <span asp-validation-for="Role" class="text-danger"></span>*@

                  <div class="mb-5 form-check text-start">
                    <input class="form-check-input shadow-sm" type="checkbox" value="" id="flexCheckDefault" required>
                    <label class="form-check-label" for="flexCheckDefault">
                        I agree to the <b>terms and conditions</b>
                    </label>
                  </div>
                <div class="mb-3 text-center">
                    <button class="btn btn-success w-25 p-2 shadow-sm" type="submit" >Sign Up</button>
                    <a class="btn btn-outline-secondary w-25 p-2 shadow-sm" style="text-decoration:none;" asp-controller="home" asp-action="index">Cancel</a>
                </div>
            </form>
            <h6 class="text-center">Already have an account? <a class="fw-bold text-dark" style="text-decoration:none ;" asp-controller="account" asp-action="login">Log In!</a></h6>
        </div>
        <div class="col-12 col-lg-6  text-center text-white position-relative" style=" height:100% ;
        background-color:#3b5998;
            background-image: linear-gradient(to top, cornflowerblue, #041d52); height: 800px;">

<div class="position-absolute top-50 start-50 translate-middle" style="">
    <div class="p-2 bd-highlight">
        <img src="~/images/general/hk.png" class="img-fluid" style="height:100px; width: 100px;"/>
    </div>
