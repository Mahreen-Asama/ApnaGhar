          <hr class="text-light"/>
          </div>
          <!-- Dashbaord -->
          <div class="accordion accordion-flush bg-dark" id="accordionDashboard">
            <div class="accordion-item bg-dark">
              <h2 class="accordion-header" id="headingDashboard">
                <a class="accordion-button collapsed bg-dark text-light" type="button" style="text-decoration:none;"
                data-bs-toggle="collapse" data-bs-target="#collapseDashboard" aria-expanded="false" aria-controls="collapseDashboard">
                  Dashboard
                </a>
              </h2>
              <div id="collapseDashboard" class="accordion-collapse collapse bg-dark" aria-labelledby="headingDashboard" data-bs-parent="#accordionDashboard">
                <div class="accordion-body">
                  <ul class="text-light" style="list-style-type:circle;" id="admin-nav-lists">
                    <li class="bg-dark">
                        <a asp-controller="Admin" asp-action="index" class="text-light" asp-route-id="@TempData["loggedinUserId"]" style="text-decoration:none;">Dashboard</a>
                    </li>
                    <li class="bg-dark">
                        <a asp-controller="Admin" asp-action="ProfilePage" class="text-light" style="text-decoration:none;">Edit Profile</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            </div>
          <!-- property -->
          <div class="accordion accordion-flush bg-dark" id="accordionProperty">
            <div class="accordion-item bg-dark">
              <h2 class="accordion-header" id="headingProperty">
                <a class="accordion-button collapsed bg-dark text-light" type="button" style="text-decoration:none;"
                data-bs-toggle="collapse" data-bs-target="#collapseProperty" aria-expanded="false" aria-controls="collapseProperty">
                  Properties
                </a>
              </h2>
              <div id="collapseProperty" class="accordion-collapse collapse bg-dark" aria-labelledby="headingProperty" data-bs-parent="#accordionProperty">
                <div class="accordion-body">
                  <ul class="text-light" style="list-style-type:circle;" id="admin-nav-lists">
                    <li class="bg-dark">
                        <a asp-controller="Admin" asp-action="ListProperties" class="text-light" style="text-decoration:none;">List Properties</a>
                    </li>
                    <li class="bg-dark">
                        <a asp-controller="Admin" asp-action="AddProperty" class="text-light" style="text-decoration:none;">Add Property</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            </div>
