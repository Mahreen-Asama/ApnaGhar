                  <ul class="text-light" style="list-style-type:circle;" id="admin-nav-lists">
                    <li class="bg-dark"><a asp-controller="Admin" asp-action="ListUsers" class="text-light" style="text-decoration:none;">List Users</a></li>
                    <li class="bg-dark"><a asp-controller="Admin" asp-action="AddUser" class="text-light" style="text-decoration:none;">Register User</a></li>
