}

@model ApnaGharV2.Models.Classes.Property

<div class="container pt-3 pb-5">
        <div class="row bg-white rounded shadow-lg p-5">
          <div class="col-lg-8 ps-5 pe-5">

            <div class="">
                <h5 class="fw-bold">@Model.Title</h5>
                 
                <p><i class="fa fa-location-dot"></i> @Model.Address, Pakistan</p>
            </div>
            

            <!-- rest whole page -->
                    <!-- home whole details here -->
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @{
                            var imgCount=@Model.ImagesCount;
                            Console.WriteLine("---------- Iamges count: " + imgCount);
                            <div class="carousel-item active">
                            <img src="~/images/properties/@(Model.Type)/@(Model.Id)_1.jpg" class="d-block w-100" alt="...">
                          </div>
                            for(int i=2; i <= imgCount; i++){
                                <div class="carousel-item">
                            <img src="~/images/properties/@(Model.Type)/@(Model.Id)_@(i).jpg" class="d-block w-100" alt="...">
                          </div>
                            }
                        }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                      <div class="row mt-2">
                        <div class="col-4">
                          <i class="fa fa-ruler-vertical"></i>
                      </div>
                      @{
                    string typee = @Model.Type;
                    if(typee=="Home"){
                        <div class="col-4">
                          <i class="fa fa-bed"></i>
                      </div>
                      <div class="col-4">
                          <i class="fa fa-bath"></i>
                      </div>
                      }
                }
                      
                      </div>
                      <div class="row">
                        <div class="col-4">
                          @Model.Size @Model.SizeUnit
                      </div>
                @{
                    string typ = @Model.Type;
                    if(typ=="Home"){
                          <div class="col-4">
                        <i class="fa fa-bed"></i> @Model.Bedrooms
                                </div>
                           <div class="col-4">
                        <i class="fa fa-bed"></i> @Model.Bathrooms
                                </div>
                      }
                }
                      
                      </div>
                      <div id="property-details">
                        <h3 class="mt-2 mb-2 fw-bold" style="">Property Overview</h3>
                        <div class="row mt-3 mb-3 bg-dark text-center p-2">
                          <div class="col">
                            <a href="#details">
                              <button class="bt btn-light rounded-pill p-2 fw-bold w-75 border border-none">Details</button>
                            </a>
                          </div>
                          <div class="col">
                            <a href="#description">
                              <button class="bt btn-light rounded-pill p-2 fw-bold w-75 border border-none">Description</button>
                            </a>
                          </div>
                          <div class="col">
                            <a href="#map">
                              <button class="bt btn-light rounded-pill p-2 fw-bold w-75 border border-none">Map</button>
                            </a>
                          </div>
                        </div>
                        <div id="details">
                            <h5 class="fw-bold">Details</h5>
                            <div class="row">
                                <div class="col-6">
                                    <table class="table table-striped">
                                        <tbody>
                                          <tr>
                                            <th scope="row">Purpose</th>
                                            <td>@Model.Purpose</td>
                                          </tr>
                                          <tr>
                                            <th scope="row">City</th>
                                            <td>@Model.City</td>
                                          </tr>
                                          <tr>
                                            <th scope="row">Price</th>
                                            <td>PKR @Model.Price @Model.PriceUnit</td>
                                          </tr>
                                          
                                        </tbody>
                                      </table>
                                </div>
                                <div class="col-6">
                                    <table class="table table-striped">
                                        <tbody>
                                          <tr>
                                            <th scope="row">Type</th>
                                            <td>@Model.Type</td>
                                          </tr>
                                          <tr>
                                            <th scope="row">Area</th>
                                            <td>@Model.Area</td>
                                          </tr>
                                          <tr>
                                            <th scope="row">Size</th>
                                            <td>@Model.Size @Model.SizeUnit</td>
                                          </tr>
                                          
                                        </tbody>
                                      </table>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div id="description">
                            <h5 class="fw-bold">Description</h5>
                            <p>@Model.Description</p>
                        </div> 
                        <hr>
                        </div>
                </div>

                <div class="col-lg-4">
           <div class="float-end mb-5">
              <button type="button" class="btn btn-white" data-bs-toggle="modal" data-bs-target="#signinfirst">
                <i class="fa fa-heart" style=""></i>
            </button>
            </div>
                    <div id="enquiry div" class="p-4 shadow rounded" style="margin-top: 100px;">
                        <h3 class="fw-bold mb-3">PKR @Model.Price @Model.PriceUnit</h3>
                        <button type="button" class="mb-3 btn btn-success text-light w-100 text-center fw-bold fs-5"><i class="fa fa-phone"></i>&nbsp;&nbsp;Call</button>
                        <form id="enquiry-form">
                          <div class="mb-3">
                            <input class="form-control" placeholder="Name*">
                          </div>
                          <div class="mb-3">
                            <input class="form-control" placeholder="Email*" type="email">
                          </div>
                          <div class="mb-3">
                            <input class="form-control" placeholder="Phone*">
                          </div>
                          <div class="mb-3">
                            <textarea rows="5" class="form-control">I would like to inquire about your property Zameen - @(Model.Id). Please contact me at your earliest convenience.</textarea>
                          </div>
                          <div class="mb-3">
                            <button type="button" class="btn text-light w-100 fw-bold" style="background-color: #3b5998;"><i class="fa fa-envelope"></i>&nbsp;&nbsp;SEND EMAIL</button>
                          </div>
                        </form>
                    </div>
                    
                </div>
    </div>

    <!-- Modal -->
<div class="modal fade" id="signinfirst" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body justify-content-center text-center">
      <i class="fa fa-circle-info" style="font-size: 72px;"></i>
      <p class="fs-4 fw-bold mt-3" style="color:#3b5998 ;">Sign In first to Save property</p>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-success ps-5 pe-5 fw-bold" data-bs-dismiss="modal">OK</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

@section footer{
    <partial name="_Footer" />
}

