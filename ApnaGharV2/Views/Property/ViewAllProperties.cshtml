@{
    ViewData["Title"] = "View All Properties";
}

@model List<ApnaGharV2.Models.Classes.Property>



    <div class="pt-5">
    <div class="rounded p-4 shadow justify-content-center text-center bg-dark container-fluid ms-5 me-5 mb-3" style="opacity: 0.8; width:90%; ">
           <form id="all-prop-filter-form">
                <div class="row">
                    <div class="col-4 col-lg-4">
                        <select class="form-select mt-2" id="filter-city" name="city">
                            <option selected value="City" disabled>City</option>
                            <option value="Lahore">Lahore</option>
                            <option value="Karachi">Karachi</option>
                            <option value="Islamabad">Islamabad</option>
                          </select>
                    </div>
                    <div class="col-4 col-lg-3">
                        <select class="form-select mt-2" id="filter-purpose" name="purpose">
                            <option selected value="Purpose" disabled>Purpose</option>
                            <option value="Sale">Sale</option>
                            <option value="Rent">Rent</option>
                          </select>
                    </div>
                    <div class="col-4 col-lg-3">
                        <select class="form-select mt-2" id="filter-type" name="type">
                            <option selected value="Category" disabled>Category</option>
                            <option value="Home">Home</option>
                            <option value="Plot">Plot</option>
                            <option value="Commercial">Commercial</option>
                          </select>
                    </div>
                    <div class="col-12 col-lg-2 justify-content-center">
                        <button type="button" class="fw-bold btn text-white w-100 mt-2" style="background-color:#3b5998 ;" id="filter-btn" onclick="filterAll()">
                            SEARCH
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="container-fluid" id="filter-div">
            <div class="" style="padding: 10px 300px 10px 50px;" >
         @foreach(ApnaGharV2.Models.Classes.Property property in Model)
            {
                <partial name="_PropertyCardsList" model="property" />
            }
            
        </div>
        </div>


        </div>
       
<!-- Modal -->
<div class="modal fade" id="signinfirst" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body justify-content-center text-center">
        <i class="fa fa-circle-info" style="font-size: 72px;"></i>
        <p class="fs-4 fw-bold mt-3" style="color:#3b5998 ;">Sign In first to Save property</p>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-success ps-5 pe-5 fw-bold" data-bs-dismiss="modal">OK</button>
          <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
        </div>
      </div>
    </div>
  </div>

       @section footer{
    <partial name="_Footer" />
}