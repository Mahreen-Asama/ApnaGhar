@*---------------------add property page starts----------------------- *@

<div style="background-color:#E7E7E7;">
<div class="container" id="container-addproperty" style="background-color:white;">

<form asp-action="AddProperty" asp-controller="Property">

    <h4 class="fw-bold">Add a Property</h4>
    <span style="color: red;">*</span>
    <span> = Required Fields</span>

    @*portion 1*@
        <div class="add-property-legend">
            PROPERTY TYPE AND LOCATION
        </div>

    <div class="row justify-content-center p-1">
        <label class="col-2">
            Purpose: <span style="color: red;">*</span>
        </label>
        <div class=" col-5 btn-group btn-group-toggle" data-toggle="buttons" required>
            <label class="btn btn-light btn-outline-secondary">
                <input type="checkbox" autocomplete="off" class="purpose"> For Sale
              </label>
              <label class="btn btn-light btn-outline-secondary">
                <input type="checkbox" autocomplete="off" class="purpose"> Rent
              </label>
        </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="type" class="col-2">
            Property Type: <span style="color: red;">*</span>
        </label>
            <div class=" col-5 btn-group btn-group-toggle" data-toggle="buttons" required>
              <label class="btn btn-light btn-outline-secondary">
                <input type="checkbox" autocomplete="off" class="type" id="homes"> Homes
              </label>
              <label class="btn btn-light btn-outline-secondary">
                <input type="checkbox" autocomplete="off" class="type" id="plots"> Plots
              </label>
              <label class="btn btn-light btn-outline-secondary">
                <input type="checkbox" autocomplete="off" class="type" id="commercial"> Commercial
              </label>
            </div>
     </div>
     @*homes subcategories (added through ajax)*@
     <div id="sub-categories" class="row"></div>

     @*cities*@
     <div class="row justify-content-center p-1">
        <label for="city" class="col-2">
             City: <span style="color: red;">*</span>
        </label>
            <div class="col-5">
              <select class="form-select" aria-label="Default select example" required id="select-city">
              <option disabled selected>Select City</option>
              <option value="Lahore">Lahore</option>
              <option value="Karachi">Karachi</option>
              <option value="Islamabad">Islamabad</option>
            </select>
            </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="area" class="col-2">
            Area: <span style="color: red;">*</span>
        </label>
            <div class=" col-5">
                <select id="citylocations" class="form-control" required name="area">
                    <option disabled selected>Select Area</option>
                </select>
            </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="address" class="col-2">
            Address: <span style="color: red;">*</span>
        </label>
            <div class="col-5">
            <input type="text" required placeholder="Property Address" class="form-control" name="address"/>
            </div>
     </div>

    @*portion 2*@

    <div class="add-property-legend">
        PROPERTY DETAILS
    </div>

    <div class="row justify-content-center p-1">
        <label class="col-2">
            Property Title: <span style="color: red;">*</span>
        </label>
        <div class=" col-5" required>
            <input type="text" required class="form-control"/>
        </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="type" class="col-2">
            Description: <span style="color: red;">*</span>
        </label>
            <div class=" col-5" required>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="type" class="col-2">
             Price (PKR): <span style="color: red;">*</span>
        </label>
            <div class="col-2">
              <input type="number" required class="form-control"/>
            </div>
            <div class=" col-3">
            <select class="form-select" aria-label="Default select example" required>
              <option selected value="1">Lakh</option>
              <option value="2">Crore</option>
              <option value="3">Thousand</option>
              </select>
            </div>
     </div>

     <div class="row justify-content-center p-1">
        <label for="type" class="col-2">
            Land Area: <span style="color: red;">*</span>
        </label>
            <span class=" col-2">
                <input type="number" required class="form-control"/>
            </span>
        @*<label for="type" class="col-auto">
            Unit: 
        </label>*@
        <div class=" col-3">
            <select class="form-select" aria-label="Default select example" required>
              <option selected value="1">Square Feet</option>
              <option value="2">Square Yard</option>
              <option value="3">Square Meters</option>
              <option value="4">Marla</option>
              <option value="5">Kanal</option>
              <option value="6">Acre</option>
              </select>
            </div>
     </div>

     <div class="row justify-content-center p-1">
          <label for="type" class="col-2">
            Bedrooms: <span style="color: red;">*</span>
        </label>
        <div class=" col-5">
            <select class="form-select" aria-label="Default select example" required>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">2</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="morethan10">10+</option>
              </select>
            </div>
     </div>

     <div class="row justify-content-center p-1">
          <label for="type" class="col-2">
            Bathrooms: <span style="color: red;">*</span>
        </label>
        <div class=" col-5">
            <select class="form-select" aria-label="Default select example" required>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">2</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="morethan10">10+</option>
              </select>
            </div>
     </div>
     @*<div class="row justify-content-center p-1">
        <label for="fearures" class="col-2">
            Features:
        </label>
            <div class=" col-5">
                <button class="btn btn-primary" style="background-color:blue;">Add Features</button>
            </div>
     </div>
    @*added by ajax*@
     @*<div id="property-features"></div>*@


     <div class="row justify-content-center p-1">

     <button type="button" style="background-color:blue;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#amenitiesmodal">
        <i class="fa fa-plus"></i> Add Features
    </button>
</div>

    @*portion 3*@
    <div class="add-property-legend">
        ADD IMAGES
    </div>
    <div class="row justify-content-center p-3">
        <div class="col-5">
        <input class="form-control" type="file" id="formFileMultiple" multiple>
        </div>
         @*<button id="add-images-btn"><i class="fa fa-plus"></i> Add Images</button>*@
    </div>

    @*submit button*@
    <div class="row justify-content-center p-3">
         <input type="submit" value="SUBMIT PROPERTY" class="btn btn-secondary col-3 fw-bold"/>
    </div>
</form>

</div>
</div>




