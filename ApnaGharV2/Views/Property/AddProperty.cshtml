                <td><input type="text" class="form-control" asp-for="MyPropAmenities.View"/></td>
            </tr>
        </table>
    </div>*@


    @*portion 3*@
    <div class="add-property-legend">
        ADD IMAGES
    </div>
    <div class="form-group row justify-content-center p-3">
        <div class="col-5">
        <input class="form-control" type="file" multiple required asp-for="PropertyImages">
        </div>
    </div>

    @*submit button*@
    <div class="form-group row justify-content-center p-3">
                <button type="submit" class="btn btn-secondary col-3 fw-bold">SUBMIT PROPERTY</button>
            </div>
    
</form>

</div>
</div>








